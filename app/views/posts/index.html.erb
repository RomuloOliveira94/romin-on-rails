<div class="w-full">
  <% content_for :title, "Posts" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Postagens</h1>
    <% if admin? %>
      <%= link_to "Nova Postagem", new_post_path, class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="divider divider-primary"></div>
  <div id="posts" class="min-w-full grid gap-2">
    <% @posts.each do |post| %>
      <%= render 'post_preview', post: post %>
    <% end %>
  </div>

</div>
