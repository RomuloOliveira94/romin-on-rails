<div class="mx-auto w-full">
  <div class="mx-auto max-w-3xl">
    <%= turbo_stream_from @post %>
    <%= render @post %>
    <div class="flex items-center justify-end gap-4">
      <% if admin? %>
        <%= link_to "Editar", edit_post_path(@post), class: "btn btn-info" %>
        <%= button_to "Excluir", @post, method: :delete, class: "btn btn-error" %>
      <% end %>
    </div>
    <div class="divider divider-primary">Coment√°rios</div>
    <%= render 'comments/comments', post: @post %>
  </div>
</div>
