<div id="<%= dom_id post %>" class="card lg:card-side bg-base-100 shadow-xl min-h-36 lg:min-h-52 lg:max-h-52">
  <% if post.thumb.attached? %>
    <figure class="max-h-44 lg:max-h-52 lg:max-w-56">
      <%= image_tag post.thumb, alt: post.title %>
    </figure>
  <% end %>
  <div class="card-body">
    <small><%= l post.created_at.to_date, format: :long %></small>
    <%= link_to post, class: "link link-hover" do %>
      <h2 class="card-title"><%= truncate(post.title, length: 90) %></h2>
    <% end %>
    <p class="hidden lg:block"><%= truncate(post.description, length: 70) %></p>
    <div class="card-actions justify-end">
      <%= link_to post, class: "btn btn-primary btn-sm" do %>
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 fill-current" viewBox="0 0 24 24">
            <path fill="currentColor"
            d="M12 23H6.575L.6 17l1.6-1.65l2.8.825V7h2v11.825l-2.45-.7L7.425 21H12q.825 0 1.413-.587T14 19v-5h2v5q0 1.65-1.175 2.825T12 23m-4-7v-5h2v5zm3 0v-4h2v4zm1 5H7.825zm4-10q-2.275 0-4.2-1.2T9 6.5q.875-2.1 2.8-3.3T16 2t4.2 1.2T23 6.5q-.875 2.1-2.8 3.3T16 11m0-2q1.425 0 2.688-.65T20.75 6.5q-.8-1.2-2.062-1.85T16 4t-2.687.65T11.25 6.5q.8 1.2 2.063 1.85T16 9m0-1q-.625 0-1.062-.437T14.5 6.5t.438-1.062T16 5t1.063.438T17.5 6.5t-.437 1.063T16 8" />
          </svg>
          Ver mais...
        </span>
      <% end %>
    </div>
  </div>
</div>
